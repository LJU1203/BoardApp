<script src="https://cdn.ckeditor.com/ckeditor5/41.3.1/classic/ckeditor.js"></script>

@model Board.Models.EditPostViewModel

<form method="post" enctype="multipart/form-data" id="postForm">
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title" value="@Model.Title" />
    </div>

    <div class="mt-3">
        <label class="form-label">Content</label>
        <textarea id="editor" class="form-control" asp-for="Content" rows="5">@Html.Raw(Model.Content)</textarea>
    </div>
        <input type="hidden" asp-for="PostId" value="@Model.PostId" />
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Post</button>
    </div>
</form>


<script>
    ClassicEditor
        .create(document.querySelector('#editor'),
            {
                ckfinder:
                {
                    uploadUrl: "@Url.Action("UploadImage", "Posts")",
                }
            })
        .catch(error => {
            console.error(error);
        });
</script>